<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity"
        android:background="@color/mint_blue">

    <TextView
            android:text="@string/welcomw_to_sal"
            android:fontFamily="@font/roboto_mono_thin"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.613" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="44dp"/>
    <TextureView
            android:layout_width="150dp"
            android:layout_height="84dp"
            android:id="@+id/textureView" app:layout_constraintStart_toEndOf="@+id/textureView2"
            app:layout_constraintHorizontal_bias="0.855" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/textureView3" app:layout_constraintVertical_bias="0.434"/>
    <TextureView
            android:layout_width="150dp"
            android:layout_height="84dp"
            android:id="@+id/textureView3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.375"/>
    <TextureView
            android:layout_width="150dp"
            android:layout_height="84dp"
            android:id="@+id/textureView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textureView" app:layout_constraintVertical_bias="0.434"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/textureView3"/>
    <com.google.android.material.navigation.NavigationView
            android:layout_width="395dp"
            android:layout_height="308dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textureView3" app:layout_constraintVertical_bias="0.78"/>
</androidx.constraintlayout.widget.ConstraintLayout>